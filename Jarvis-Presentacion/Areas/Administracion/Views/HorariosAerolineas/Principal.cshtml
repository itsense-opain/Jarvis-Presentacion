@model IEnumerable<Opain.Jarvis.Dominio.Entidades.HorarioAerolineaOtd>

<div class="row">
    <div class="col-sm-10 offset-sm-1">
        <h1>Editar y eliminar horas de acceso</h1>
        <hr />
        <p>Para editar ó eliminar la información de clic sobre el campo correspondiente</p>
        <hr />
        <table class="table" id="tblHorarioOperacion">
            <thead>
                <tr>

                    <th style="width:20%">
                        Aerol&iacute;nea@*@Html.DisplayNameFor(model => model.Aerolinea)*@
                    </th>
                    <th style="width:20%">
                        Hora Inicio@*@Html.DisplayNameFor(model => model.HoraInicio)*@
                    </th>
                    <th style="width:20%">
                        Hora Fin@*@Html.DisplayNameFor(model => model.HoraFin)*@
                    </th>
                    <td style="width:20%;  border-bottom: 2px !important;">
                        Acciones
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:20%">
                            @Html.DisplayFor(modelItem => item.Aerolinea)
                        </td>
                        <td style="width:20%">
                            @Html.DisplayFor(modelItem => item.HoraInicio)
                        </td>
                        <td style="width:20%">
                            @Html.DisplayFor(modelItem => item.HoraFin)
                        </td>
                        <td>
                            <button type="button" class="btn btn--simple p-1 ml-1 mr-1" onclick="EditarHorarioAerolinea(@item.Id);">
                                <img src="~/images/editar.png" alt="Editar" />
                            </button>

                            <button type="button" class="btn btn--simple p-1 ml-1 mr-1" onclick="EliminarHorarioAerolinea(@item.Id);">
                                <img src="~/images/borrar.png" alt="Eliminar" />
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>