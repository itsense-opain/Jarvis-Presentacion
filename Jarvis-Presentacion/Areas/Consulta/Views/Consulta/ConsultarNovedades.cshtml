@model IEnumerable<Opain.Jarvis.Dominio.Entidades.NovedadOtd>
@{
    
    if (ViewBag.SinDatos == "1")
    {
        <h4> No se encontraron novedades con la información cargada </h4>
    }
    else if (ViewBag.SinDatos == "0")
    {
        <div class="row">
            <div class="text-center line-vertical col-sm-6">
                <img src="~/images/novedad-avion.png" alt="Número de vuelo" /> Número de vuelo: <strong>@Model.FirstOrDefault().NumeroVuelo</strong>
            </div>
            <div class="text-center col-sm-6">

               <img src="~/images/novedad-calendario.png" alt="Fecha de vuelo" /> Fecha de vuelo: <strong>@Model.FirstOrDefault().FechaVuelo.ToString("dd-MM-yyyy")</strong>
            
            </div>
        </div>
        <hr />
        <div class="table-responsive">
            <table class="mt-4 mb-3" cellspacing="0" cellpadding="0" width="100%" id="tblConsultaNovedades">
                <thead>
                    <tr>
                        <td style="width: 30px;">
                            Número de novedad
                        </td>
                        <td style="width: 30px">
                            @Html.DisplayNameFor(model => model.TipoError)
                        </td>
                        <td style="width: 30px;">
                            @Html.DisplayNameFor(model => model.Error)
                        </td>
                        <td style="width: 30px;">
                            @Html.DisplayNameFor(model => model.FechaHora)
                        </td>
                      
                    </tr>
                </thead>
                <tbody>
                    @{int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span>@i</span>
                                @{i++;
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoError)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Error)
                            </td>
                            <td>
                                @item.FechaHora.Day.ToString().PadLeft(2, '0')/@item.FechaHora.Month.ToString().PadLeft(2, '0')/@item.FechaHora.Year.ToString()

                            </td>

                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <script>
            $("#tblConsultaNovedades").DataTable();
        </script>
    }
}
