@model Opain.Jarvis.Dominio.Entidades.PasajeroTransitoOtd

<h1>
    ACTUALIZAR TRANSITO
</h1>

<div class="row">
    <div class="col-12">
        <form asp-action="Actualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <input type="hidden" asp-for="Operacion" />
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="TTC" />
                <input type="hidden" asp-for="TTL" />
                <input type="hidden" asp-for="FechaHoraCargue" />
                <input type="hidden" asp-for="NumeroVueloLlegada" />
                <input type="hidden" asp-for="FechaSalida" />
                <input type="hidden" asp-for="HoraSalida" />
                <input type="hidden" asp-for="NumeroVueloSalida" />
                <input type="hidden" asp-for="NombrePasajero" />
                <div class="form-group col-6">
                    <label asp-for="FechaLlegada" class="control-label"></label>
                    <input asp-for="FechaLlegada" class="form-control" />
                    <span asp-validation-for="FechaLlegada" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="HoraLlegada" class="control-label"></label>
                    <input asp-for="HoraLlegada" class="form-control" />
                    <span asp-validation-for="HoraLlegada" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <button type="button" class="btn btn--default--grey btn-block" data-dismiss="modal">Cancelar</button>
                </div>
                <div class="form-group col-6">
                    <button type="submit" class="btn btn--default btn-block">Actualizar</button>
                </div>
            </div>
        </form>
    </div>
</div>

