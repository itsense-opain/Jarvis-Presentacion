@model Opain.Jarvis.Dominio.Entidades.HorarioAerolineaOtd



<form class="needs-validation" novalidate>
    <div class="text-right">
        <button type="button" id="btnListarHorarioAerolinea" onclick="ListarHorarioAerolinea();" class="btn btn--border" data-toggle="modal" data-target=".editarHora"><img src="~/images/editar.png" alt="Editar acceso" class="img-fluid mr-2 ml-2">Editar acceso</button>
    </div>
    <hr />
    <div class="form-group col-sm-6 offset-sm-3 mb-4">
        <p>Aerolínea </p>
             <select asp-for="IdAerolinea" asp-items="@((List<SelectListItem>)ViewData["Aerolineas"])" class="form-control" required>
           
        </select>
        <div class="invalid-tooltip">
            Por favor seleccione una opción
        </div>
    </div>

    <div class="col-sm-6 offset-sm-3">
        <p>Establecer hora de acceso</p>
        <div class="justify-content-center d-flex mb-4">

            <div class="form-group flex-fill mb-2 mr-2 time--width">
                <input asp-for="HoraInicio" type="time" style="width:100%" />
                <div class="invalid-tooltip">
                    Por favor escriba un valor valido
                </div>
            </div>
            <div class="flex-fill text-center mt-2">
                hasta
            </div>
            <div class="form-group flex-fill mb-2 ml-2  time--width">
                <input asp-for="HoraFin" type="time" style="width:100%" />
                <div class="invalid-tooltip">
                    Por favor escriba un valor valido
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 offset-sm-3">
        <button type="button" id="btnGuardarHorarioAerolinea" onclick="GuardarHorarioAerolineaPost();" class="btn btn--border btn-block" data-toggle="modal" data-target=".guardado">
            <img src="~/images/guardar.png" alt="Crear" class="img-fluid mr-2 ml-2">Crear
        </button>
    </div>
</form>