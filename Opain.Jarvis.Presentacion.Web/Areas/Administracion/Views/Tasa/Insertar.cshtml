@model Opain.Jarvis.Dominio.Entidades.TasaAeroportuariaOtd

<form class="needs-validation" novalidate>
    <div class="text-right">
        <button type="button" id="btnInsertarTasa" class="btn btn--border" data-toggle="modal" data-target=".guardado" onclick="GuardarTasaPost();"><img src="~/images/guardar.png" alt="Guardar cambios" class="img-fluid mr-2 ml-2">Guardar cambios</button>
    </div>
    <hr />
    <div class="form-inline justify-content-center input__TMR--height">
        <div class="form-group tamano mb-2">
            <label asp-for="ValorCOP" class="">$</label>
            @*inicio elopez Bug 921- ajuste valor al borrar tasa aero - 16-12-2020*@
            <input type="number" class="form-control mr-2" asp-for="ValorCOP" value="@User.Claims.Where(c => c.Type.Equals("TasaPeso")).FirstOrDefault().Value" placeholder="0" required> COP
            @*Fin  elopez Bug 921- ajuste valor al borrar tasa aero - 16-12-2020*@
            <div class="mr-5 ml-5">/</div>
            <div class="invalid-tooltip">
                Por favor escriba un valor valido
            </div>
        </div>
        <div class="form-group tamano mb-2">
            <label asp-for="ValorUSD" class="">$</label>
            <input type="number" class="form-control mr-2" asp-for="ValorUSD" value="@User.Claims.Where(c => c.Type.Equals("TasaDolar")).FirstOrDefault().Value" placeholder="0" required> USD
            <div class="invalid-tooltip">
                Por favor escriba un valor valido
            </div>
        </div>
    </div>
</form>