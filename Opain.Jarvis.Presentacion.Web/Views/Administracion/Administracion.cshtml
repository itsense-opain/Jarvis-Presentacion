<!--Modal crear nuevo usuario-->
<div class="modal fade crear" tabindex="-1" role="dialog" aria-labelledby="crear" aria-hidden="true">
    <div class="modal-dialog modal--big">
        <div class="modal-content">
                <div class="modal-header">
                    <div class="row">
                        <div class="col-sm-4 offset-sm-2">
                            <button type="button" class="btn btn-block" data-dismiss="modal">
                                <img src="~/images/cerra.png" alt="Cerrar" />
                            </button>
                        </div>
                    </div>
                </div>
                <form class="needs-validation" novalidate>
                    <div class="modal-body">
                        <div class="container">
                            <h1>
                                Crear usuario
                            </h1>
                            <p>
                                A continuación llene los siguientes campos
                            </p>
                            <hr />

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label for="Name">Nombre</label>
                                    <input type="text" class="form-control" id="Name" placeholder="Nombre" required />
                                    <div class="invalid-tooltip">
                                        Por favor escriba el nombre del usuario
                                    </div>
                                </div>

                                <div class="form-group col-sm-6">
                                    <label for="lastName">Apellido</label>
                                    <input type="text" class="form-control" id="lastName" placeholder="Apellido" required />
                                    <div class="invalid-tooltip">
                                        Por favor escriba el apellido del usuario
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="idType">Tipo de identificación</label>
                                    <select id="idType" class="form-control" required>
                                        <option value="">Seleccione una opción</option>
                                        <option value="CC">Cédula de ciudadanía</option>
                                        <option value="CE">Cédula de extrajería</option>
                                        <option value="NIT">NIT</option>
                                        <option value="ETC">etc</option>
                                    </select>
                                    <div class="invalid-tooltip">
                                        Por favor escriba el tipo de identificación
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="idNumber">Número de identificación</label>
                                    <input type="number" class="form-control" id="idNumber" placeholder="Número de identificación" required />
                                    <div class="invalid-tooltip">
                                        Por favor escriba el número de identificación del usuario
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="email">Correo electrónico</label>
                                    <input type="email" class="form-control" id="email" placeholder="Correo electrónico" required />
                                    <div class="invalid-tooltip">
                                        Por favor escriba un correo electrónico valido
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="phone">Teléfono</label>
                                    <input type="tel" class="form-control" id="phone" placeholder="Teléfono" required />
                                    <div class="invalid-tooltip">
                                        Por favor escriba un número de teléfono
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="cargo">Cargo</label>
                                    <input type="text" class="form-control" id="cargo" placeholder="Cargo" required />
                                    <div class="invalid-tooltip">
                                        Por favor escriba el cargo
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="Perfil">Perfil</label>
                                    <select id="Perfil" class="form-control" required>
                                        <option value="">Seleccione una opción</option>
                                        <option value="1">Perfil 1</option>
                                        <option value="2">Perfil 2</option>
                                        <option value="3">Perfil 2</option>
                                    </select>
                                    <div class="invalid-tooltip">
                                        Por favor seleccione el tipo de perfil
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="airline">Aerolínea</label>
                                    <select id="airline" class="form-control" required>
                                        <option value="">Seleccione una opción</option>
                                        <option value="1">Avianca</option>
                                        <option value="2">America airlines</option>
                                        <option value="3">LATAM</option>
                                    </select>
                                    <div class="invalid-tooltip">
                                        Por favor seleccione la aerolínea
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    <button type="button" class="btn btn--default--grey btn-block" data-dismiss="modal">Cancelar</button>
                                </div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn--default btn-block">Crear usuario</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
        </div>
    </div>
</div>

<!--Modal editar usuario-->
