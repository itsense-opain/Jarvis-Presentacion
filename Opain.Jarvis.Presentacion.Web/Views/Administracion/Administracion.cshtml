                                <input type="tel" class="form-control" id="tel" placeholder="Teléfono" required />
                                <div class="invalid-tooltip">
                                    Por favor escriba un número de teléfono
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="cargo">Cargo</label>
                                <input type="text" class="form-control" id="cargo" placeholder="Cargo" required />
                                <div class="invalid-tooltip">
                                    Por favor escriba el cargo
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="Perfil">Perfil</label>
                                <select id="Perfil" class="form-control" required>
                                    <option value="">Seleccione una opción</option>
                                    <option value="1">Super administrador</option>
                                    <option value="2">Administrador</option>
                                    <option value="3">Usuario</option>
                                </select>
                                <div class="invalid-tooltip">
                                    Por favor seleccione un Perfil
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="aero">Aerolínea</label>
                                <select id="aero" class="form-control" required>
                                    <option value="">Seleccione una opción</option>
                                    <option value="avianca">Avianca</option>
                                    <option value="latam">LATAM</option>
                                    <option value="copa">Copa Airlines</option>
                                </select>
                                <div class="invalid-tooltip">
                                    Por favor seleccione una aerolínea
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                <button type="button" class="btn btn--default--grey btn-block" data-dismiss="modal">Cancelar</button>
                            </div>
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn--default btn-block" data-dismiss="modal">Guardar cambios</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

